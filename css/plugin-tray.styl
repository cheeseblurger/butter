
.butter-tray #plugin-list {
  position: relative;
  top: 5px;
  left: 5px;
  height: 150px;
  z-index: 2140000002;
  background-image: url( "../resources/bg.jpg" );
  opacity: 0;
  border-radius: 5px;
  box-shadow: 0 1px 0 #737373,inset 0 1px 0 #414141, 0 0 1px #000;
  moz-box-shadow: 0 1px 0 #737373,inset 0 1px 0 #414141, 0 0 1px #000;
  o-box-shadow: 0 1px 0 #737373,inset 0 1px 0 #414141, 0 0 1px #000;
  webkit-box-shadow: 0 1px 0 #737373,inset 0 1px 0 #414141, 0 0 1px #000;
}

.butter-tray #plugin-list .container {
  padding: 5px;
  font-family: "Helvetica Neue", Helvetica, sans-serif;
  color: #EEE;
  height: 140px;
  overflow-y: scroll;
}
.butter-tray #plugin-list .container > p {
  margin: 0 0 10px 5px;
  font-size: 14px;
  font-style: italic;
}
.butter-tray #plugin-list .container > div {
  cursor: pointer;

  position: relative;
  float: left;
  margin-right: 10px;
  margin-bottom: 10px;
  padding: 15px 25px 15px 15px;
  width: 160px;

  font-size: 14px;
  font-weight: 600;
  text-shadow: 0 1px 2px #000;

  border-radius: 10px;
  border: 1px solid black;
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.2), 0 3px 3px rgba(0,0,0,0.2);
  background-image: linear-gradient(bottom, rgb(31,31,31) 29%, rgb(36,36,36) 65%);
  background-image: -o-linear-gradient(bottom, rgb(31,31,31) 29%, rgb(36,36,36) 65%);
  background-image: -moz-linear-gradient(bottom, rgb(31,31,31) 29%, rgb(36,36,36) 65%);
  background-image: -webkit-linear-gradient(bottom, rgb(31,31,31) 29%, rgb(36,36,36) 65%);
  background-image: -ms-linear-gradient(bottom, rgb(31,31,31) 29%, rgb(36,36,36) 65%);
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.29, rgb(31,31,31)),
    color-stop(0.65, rgb(36,36,36))
  );

}

.butter-tray #plugin-list .container div > span.icon {
  display: block;
  float: left;
  width: 30px;
  height: 30px;
  background-size: 30px;
  background-repeat: no-repeat;
  margin-right: 10px;
}

.butter-tray #plugin-list .container div > span.label {
  line-height: 30px;
}

.butter-tray #butter-plugin {
  border-radius: 6px;
  moz-border-radius: 6px;
  o-border-radius: 6px;
  webkit-border-radius: 6px;
  font-size: 80%;
  background-image: -moz-linear-gradient(center bottom,#6E6E6E 0,#7D7D7D 100%);
  background-image: -webkit-gradient(linear,left bottom,left top,color-stop(0,#6E6E6E),color-stop(1,#7D7D7D));
  border: 1px solid #333;
  box-shadow: 0 1px 0 #656565;
  moz-box-shadow: 0 1px 0 #656565;
  o-box-shadow: 0 1px 0 #656565;
  padding: 3px;
  height: 115px;
  webkit-box-shadow: 0 1px 0 #656565;
  width: 115px;
  position: relative;
}

.butter-tray #butter-plugin .list-wrapper {
  position: relative;
  top: 18px;
  padding-left: 5px;
  height: 95px;
  width: 100px;
  overflow: hidden;
}

.butter-tray #butter-plugin .list {
  position: relative;
  padding-left: 5px;
  width: 100px;
}

.butter-tray #butter-plugin .title {
  position: absolute;
  top: 0px;
  left: 0px;
  font-size: 11px;
  font-family: Verdana;
  border-radius: 4px 4px 0px 0px;
  height: 15px;
  width: 100%;
  background-color: #3E3E3E;
}

.butter-tray #butter-plugin .title span {
  padding-left: 8px;
  color: #fff;
}

.butter-tray #butter-plugin .list-item {
  font-family: Verdana;
  color: #fff;
  list-style-type: none;
  cursor: pointer;
  font-size: 12px;
  width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.butter-tray #butter-plugin .scroll-bar-v {
  right: 3px;
  width: 6px;
  height: 100px;
  top: 18px;
}

.butter-tray #butter-plugin .scroll-bar-v .scroll-handle {
  width: 4px;
}

.butter-tray #add-popcorn {
  border-radius: 6px;
  moz-border-radius: 6px;
  o-border-radius: 6px;
  webkit-border-radius: 6px;
  font-size: 75%;
  background-image: -moz-linear-gradient(center bottom,#4A6B2D 0,#80BA4E 100%);
  background-image: -webkit-gradient(linear,left bottom,left top,color-stop(0,#4A6B2D),color-stop(1,#80BA4E));
  border: 1px solid #333;
  box-shadow: 0 1px 0 #656565;
  moz-box-shadow: 0 1px 0 #656565;
  o-box-shadow: 0 1px 0 #656565;
  padding: 3px;
  webkit-box-shadow: 0 1px 0 #656565;
  width: 123px;
  margin: 0;
  color: #eee;
  position: absolute;
  top: 127px;
  cursor: pointer;
  height: 24px;
}